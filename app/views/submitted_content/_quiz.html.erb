<b>Quiz</b><br/>
<div id="url" style="">
    <% if participant.quiz_id %>
    <ul>
        <li><%= link_to 'View Quiz', :controller => 'questionnaire', :action => 'view', :id => participant.quiz_id %></li>
        <li><%= link_to 'Edit Quiz', :controller => 'questionnaire', :action => 'edit', :id => participant.quiz_id %></li>
		<li><%= link_to 'Delete Quiz', :controller => 'questionnaire', :action => 'delete', :id => participant.quiz_id %></li>
    </ul>
