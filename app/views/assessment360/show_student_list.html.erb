    Filters :
    <%= link_to "All", :action => 'show_student_list', :choice => @choice, :course_id => @course.id, :flag => 'all' %> |
    <%= link_to "Only Submitted", :action => 'show_student_list', :choice => @choice, :course_id => @course.id, :flag => 'onlySubmitted' %> |
    <%= link_to "Only Not Submitted", :action => 'show_student_list', :choice => @choice, :course_id => @course.id, :flag => 'onlyNotSubmitted' %>
