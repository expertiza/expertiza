<% if has_team_and_metareview?[:true_num] == 2 %>
  <!--100 = 19 + 8 * 9 + 9-->
  <% namecolwidth = 19 %>
  <% colwidth = 9 %>
<% elsif has_team_and_metareview?[:true_num] == 1 %>
  <!--100 = 16 + 6 * 12 + 12-->
  <% namecolwidth = 16 %>
  <% colwidth = 12 %>
<% else %>
  <!--100 = 16 + 4 * 18 + 18-->
  <% namecolwidth = 10 %>
  <% colwidth = 18 %>
<% end %>

<!-- Compute Self-Review Score based on Peer-Review Score and Self-Granted Score -->
<%
   if @pscore[:review]
     @peer_review_score=Rscore.new(@pscore,:review)
   end

   if @peer_review_score == 0
     @peer_review_score = 0
     else
       @peer_review_score = @peer_review_score.my_avg
       end
   @self_review_score = (100 - ((@raw_self_score - @peer_review_score).abs)).round(2)

%>

<a href="#" name='score-chartLink' onClick="toggleElement('score-chart', 'stats');return false;">hide stats</a>

