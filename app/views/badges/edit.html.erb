<div style="text-align: center">
  <h3 style="margin-bottom: 50px">Choose Assignments</h3>

  <%= form_tag(badges_update_path(:badge_group_id => params[:badge_group_id]), method: 'post') do %>
      <table class="table" style="width: 50%">
        <thead>
        <tr>
          <th style="text-align: center">Assignment Name</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @assignments.each do |a| %>
            <tr>
              <td><%= a.name %></td>
              <% if @assignments_list.exists?(:assignment_id => a.id)  %>
                <td style="text-align: left"><%= check_box_tag 'assignment_' + a.id.to_s,nil, {:checked => 'checked'} %></td>
              <% else %>
                <td style="text-align: left"><%= check_box_tag 'assignment_' + a.id.to_s %></td>
              <% end %>
            </tr>
        <% end %>
        </tbody>
      </table>

      <div style="margin-top: 50px; text-align: left">
        <h4>Badge Strategy Configuration</h4>
        <%= render 'select_strategy' %>
      </div>

      <div style="margin-top: 50px; text-align: left">
        <h3>Which badge to award?</h3>
        <strong><i style="color: darkred">Please refresh the page whenever a new badge is created</i></strong>
        <br/>
        <%= render 'select_badge' %>
      </div>
      <div style="margin-bottom: 200px; text-align: left;">
        <%= button_tag 'Update', {:class => 'btn btn-success'} %>
      </div>
  <% end %>
</div>