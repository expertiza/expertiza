<h1 style="text-align: center">Badges Information for <%= current_user.name %></h1>

<% @course_info.each do |course| %>
    <h4><%= course.name %></h4>
    <strong>Leaderboard:</strong>
    &nbsp;&nbsp;
    <%= link_to 'View Leaderboard', :action => 'view', :course_id => course.id, :user_id => current_user.id, :course_name => course.name %>
    <br/>
    <% if @instructor_query %>
        <strong>Award Badges:</strong>
        &nbsp;&nbsp;
        <%= link_to 'Award Badges',:controller => 'badges', :action => 'award_badges', :course_id => course.id, :user_id => current_user.id, :course_name => course.name %>
    <% else %>
        <strong>Personal Badges:</strong>
        &nbsp;&nbsp;
        <%= link_to 'Personal Badges', :action => 'personal_badges', :course_id => course.id, :user_id => current_user.id, :course_name => course.name %>
    <% end %>
    <hr>
<% end %>