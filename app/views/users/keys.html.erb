<h1>User: <%=h @user.username(session[:ip]) %></h1>

<table>

  <tr><th>Full Name:</th>
    <td><%= @user.fullname(session[:ip]) %></td>
  </tr>

  <tr><th>Email Address:</th>
    <td><%= @user.email(session[:ip]) %></td>
  </tr>

  <tr><th valign="top">Private Key:</th>
    <td><textarea rows="10" cols="65"><%= @private_key %></textarea></td>
  </tr>

</table>

