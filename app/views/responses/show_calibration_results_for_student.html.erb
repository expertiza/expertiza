<h1>Your calibration results <%= " for " + @assignment.name unless @assignment.course.nil?%></h1>
<style>
th, td {
    padding: 5px;
}
</style>
<% @review_items.each_with_index do |item, index| %>
	<% next if item.break_before == false %>
	<% instructor_answer = Answer.where(["item_id = ? and response_id = ?", item.id, @calibration_response.id]).first ||= 0 %>
	<% stu_answer = Answer.where(["item_id = ? and response_id = ?", item.id, @review_response.id]).first ||= 0 %>
	<b><%= "Question #{index+1} [#{item.type}]: " %></b><%= item.txt %>
	<table border = "1">
		<tr>
			<th></th>
			<th>Answer</th>
			<th>Comment</th>
		</tr>
		<tr>
			<% case instructor_answer.answer %>
				<% when 5 %>
					<% instructor_css_class = 'c5' %>
				<% when 4 %>
					<% instructor_css_class = 'c4' %>
				<% when 3 %>
					<% instructor_css_class = 'c3' %>
				<% when 2 %>
					<% instructor_css_class = 'c2' %>
				<% else %>
					<% instructor_css_class = 'c1' %>
			<% end %>
			<% case stu_answer.answer %>
				<% when 5 %>
					<% stu_css_class = 'c5' %>
				<% when 4 %>
					<% stu_css_class = 'c4' %>
				<% when 3 %>
					<% stu_css_class = 'c3' %>
				<% when 2 %>
					<% stu_css_class = 'c2' %>
				<% else %>
					<% stu_css_class = 'c1' %>
			<% end %>

			<td>Expert review</td>
			<% if item.instance_of? Checkbox %>
				<% if instructor_answer.answer == 1 %>
					<td><img src="/assets/Check-icon.png"></td>
				<% else %>
					<td><img src="/assets/delete-icon.png"></td>
				<% end %>
				<td>N/A</td></tr>

				<tr><td>Your review</td>
				<% if stu_answer.answer == 1 %>
					<td><img src="/assets/Check-icon.png"></td>
				<% else %>
					<td><img src="/assets/delete_icon.png"></td>
				<% end %>
				<td>N/A</td>
			<% elsif item.instance_of? Dropdown or item.instance_of? TextArea %>
				<td>N/A</td>
				<td><%=sanitize instructor_answer.comments %></td></tr>

				<tr><td>Your review</td>
				<td>N/A</td>
				<td><%=sanitize stu_answer.comments %></td>
			<% elsif item.instance_of? TextField %>
				<% if (index+1) <= @review_items.length-1 %>
					<% next_item = @review_items[index+1] %>
					<% next_instructor_answer = Answer.where(item_id: @review_items[index+1].id, response_id: @calibration_response.id).first %>
					<% next_stu_answer = Answer.where(item_id: @review_items[index+1].id, response_id: @review_response.id).first %>
				<% end %>
				<% if item.break_before == true and !next_item.nil? and next_item.break_before == false %>
					<td><%=sanitize instructor_answer.comments %> - <%=sanitize next_instructor_answer.comments %></td>
					<td>N/A</td></tr>

					<tr><td>Your review</td>
					<td><%=sanitize stu_answer.comments %> - <%=sanitize next_stu_answer.comments %></td>
					<td>N/A</td>
				<% elsif item.break_before == false or next_item.break_before == false %>
					<% next %>
				<% else %>
					<td><%=sanitize instructor_answer.comments %></td>
					<td>N/A</td></tr>

					<tr><td>Your review</td>
					<td><%=sanitize stu_answer.comments %></td>
					<td>N/A</td>
				<% end %>
			<% else %>
				<td class=<%= instructor_css_class %>><%= instructor_answer.answer %></td>
				<td><%=sanitize instructor_answer.comments %></td></tr>

				<tr><td>Your review</td>
				<td class=<%= stu_css_class %>><%= stu_answer.answer %></td>
				<td><%=sanitize stu_answer.comments %></td>
			<% end %>
		</tr>		
	</table>
	<br>
<% end %>