  <script type="text/javascript">

    // Global Variables for sharing data between Javascript functions.
    isMinSelected = false;
    var file_id;
    var participant_id = <%= @participant.id %>;

    var participant_id_actual = <%= @participant.id %>;
    var comment_offset;
