<%= form_for @user , :url => url_for(:controller => 'writers', :action => 'create') do |f|%>
    <% if session[:user_id].nil? %>
        <h1>New Writer Signup</h1>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :crypted_password %>
        <br>
        <%=submit_tag "Create Writer"%>
    <% else %>
        <h1>Add Writer</h1>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <br>
        <%=submit_tag "Add"%>
        <br>
        <%= link_to "Back", display_contributors_path %>
    <% end %>

    <%#= f.label :confirmpassword %>
    <%#= f.text_field :confirmpassword%>



<%end%>