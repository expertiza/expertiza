        <% @assignments.each do |assignment| %>
            <th>
              <%= assignment.name %>
            </th>
            <th>
            </th>
        <% end %>
  </tr>
  <% @allUsers.each do |user| %>
    <tr>
      <td align="center">
        <%= user.fullname %>
      </td>
      <% @assignments.each do |assignment| review = assignment.user_review_assignment(user.id, @choice)%>
          <% if(review == "nil1") %>
            <td align="center">
              <img src="/images/whiteCircle.png">
            </td>
          <% elsif(review == "nil2") %>
            <td align="center">
              <img src="/images/none.png">
            </td>
          <% elsif(review == "true") %>
            <td align="center">
              <img src="/images/greenCircle.png">
            </td>
          <% elsif(review == "false") %>
            <td align="center">
              <img src="/images/redCircle.png">
            </td>
          <% end %>
          <td></td>
      <% end %>
    </tr>

  <% end %>
</table>
