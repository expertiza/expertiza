<% form_for(@join_team_request) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :participant_id %><br />
    <%= f.text_field :participant_id %>
  </p>
  <p>
    <%= f.label :team_id %><br />
    <%= f.text_field :team_id %>
  </p>
  <p>
    <%= f.label :comments %><br />
