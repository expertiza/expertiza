<% if @popup %>
<!DOCTYPE html>
<html>
<head>
  <title>Manage Tag Prompt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style>
    #jsGrid {
      width:720px;
      height:1000px;
      margin: auto;
    }
  </style>
</head>
<body>
<% end %>
<link href="http://js-grid.com/css/jsgrid.min.css" rel="stylesheet" />
<link href="http://js-grid.com/css/jsgrid-theme.min.css" rel="stylesheet" />

<h4>Manage Tag Prompts</h4>
<div id="jsGrid" ></div>

<script src="http://js-grid.com/js/jsgrid.min.js"></script>
<script>
  $(function() {
    $("#jsGrid").jsGrid({
      height: "1000px",
      width: "720px",
      filtering: true,
      inserting: true,
      editing: true,
      sorting: true,
      paging: true,
      autoload: true,
      pageSize: 10,
      pageButtonCount: 5,
      deleteConfirm: "Do you really want to delete client?",
      controller: {
        loadData: function(filter) {
          return $.ajax({
            type: "GET",
            url: "../tag_prompts",
            dataType: "JSON",
            data: filter
          });
        },
        insertItem: function(item) {
          return $.ajax({
            type: "POST",
            url: "../tag_prompts",
            data: item
          });
        },
        updateItem: function(item) {
          return $.ajax({
            type: "PUT",
            url: "../tag_prompts/" + item.id,
            data: item
          });
        },
        deleteItem: function(item) {
          return $.ajax({
            type: "DELETE",
            url: "../tag_prompts/" + item.id
          });
        }
      },
      fields: [
        { name: "prompt", type: "text", width: 50 },
        { name: "desc", type: "text", width: 150},
        { name: "control_type", type: "text", width: 50 },
        { type: "control" }
      ]
    });
  });
</script>

<% if @popup %>
</body>
<% end %>

