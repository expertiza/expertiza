<table width="100%" border="0" >
  <%review_scores = review_score_for_team(@id, team_name) %>
  <% i = 1 %>
  <% review_scores.each do |review_score| %>
    <% metrics = get_score_metrics(review_score) %>
    <tr>
      <td width="30%">
        <div>
          <strong>Reviewers with scores</strong><br>
          <ol>
            <% review_score.each do |reviewer, score| %>
              <% if score > metrics[:upper_tolerance_limit] or score < metrics[:lower_tolerance_limit]  %>
                <li><% response_id = response_id_review_conflict(reviewer, @teams[team_name], @id) %>
                  <mark style="background-color:#FFFF00">
                  <%= link_to "("+@reviewers[team_name.to_s][reviewer.to_s].to_s+")", :controller => 'popup', :action => 'team_users_popup', :id => @teams[team_name], :id2 => response_id, :assignment_id=>@id %>
                  <%= list_review_submissions(reviewer, @teams[team_name], response_id) %>
                  <%= ": " + score.to_s %></mark>
                </li>
              <% else %>
                <li><% response_id = response_id_review_conflict(reviewer, @teams[team_name], @id) %>
                  <%= link_to "("+@reviewers[team_name.to_s][reviewer.to_s].to_s+")", :controller => 'popup', :action => 'team_users_popup', :id => @teams[team_name], :id2 => response_id, :assignment_id=>@id %>
                  <%= list_review_submissions(reviewer, @teams[team_name], response_id) %>
                  <%= ": " + score.to_s %>
                </li>
              <% end %>
            <% end %>
          </ol>
        </div>
        <strong>Max Possible Review Score: </strong><%=max_scores[i-1]%><br>
        <strong>Average Score: </strong><%=  metrics[:average].to_s %><br>
        <strong>Standard Deviation: </strong><%=  metrics[:std].to_s %><br>
        <strong>Lower Threshold: </strong><%= metrics[:lower_tolerance_limit].to_s %><br>
        <strong>Upper Threshold: </strong><%= metrics[:upper_tolerance_limit].to_s %><br><br>
      </td>
      <td>
        <div>
          <strong><u><%= "Round: " + i.to_s %></u></strong>
          <%= generate_score_chart(max_scores[i-1], review_score) %>
        </div>
      </td>
    </tr>
    <% i+=1 %>
  <% end %>
</table>

<style>
  ol {
    column-count: 3;
  }
</style>