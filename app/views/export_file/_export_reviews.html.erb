<h2>Export Reviews</h2>
<%= form_tag({:controller => 'export_file', :action => 'export_reviews'}, {:method => 'post', :multipart => true, :name => 'export_reviews_form'}) do %>
    <table>
      <tr>
        <td valign='Top'>Delimiter:</td>
        <td>
          <%= radio_button_tag 'delim_type2', 'comma', true %> Comma<br/>
          <%= radio_button_tag 'delim_type2', 'space' %> Space<br/>
          <%= radio_button_tag 'delim_type2', 'tab' %> Tab<br/>
          <%= radio_button_tag 'delim_type2', 'other' %> Other <%= text_field_tag 'other_char2' %>
          <br/>
        </td>
      </tr>
    </table>
    <br/>
    <label for="Export Reviews Fields">Export : <br/></label><br/>
    <%= check_box 'reviews_options', 'team_id', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Reviews Fields">Team ID / Author ID</label><br/>
    <%= check_box 'reviews_options', 'team_name', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Reviews Fields">Team Name / Paper Author</label><br/>
    <%= check_box 'reviews_options', 'reviewer', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Reviews Fields">Reviewer</label><br/>
    <%= check_box 'reviews_options', 'question', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Reviews Fields">Question ID / Dimension</label><br/>
    <%= check_box 'reviews_options', 'question_id', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Reviews Fields">Question / Dimension Name</label><br/>
    <%= check_box 'reviews_options', 'comment_id', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Reviews Fields">Comment ID / Dimension ID</label><br/>
    <%= check_box 'reviews_options', 'comments', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Reviews Fields">Comment Content</label><br/>
    <%= check_box 'reviews_options', 'score', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Reviews Fields">Score</label><br/>
    <br/>
    <br/>
    <%= hidden_field_tag('id', @id) %>
    <%= hidden_field_tag('model', @model) %>
    <input type='submit' value='Export Reviews' onclick='{export_reviews_form.submit();}'/>
    <br/><br/>
<% end %>
