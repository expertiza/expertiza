<h3>Listing all your suggestions</h3>




<%if @suggestions.size > 0 %>
<div class="flash_note">
	Click View link to view the suggestion and/or to edit it
</div>

<table class="general" cellpadding=5 width=100% border=1>
  <tr>
    <th>Title</th>
	<th>Status</th>
	<th>Submitter's unity ID</th>
	<th>Date</th>
	<th>Action</th>
	
  </tr>

<% for suggestion in @suggestions %>
  <tr class="listingRow">
    <td><%=h suggestion.title %></td>
    <td align="center"><%=h suggestion.status %></td>
	<td align="center"><%=h suggestion.unityID %></td>
	<td align="center"><%=h suggestion.updated_at %></td>
	<td align="center"><%= link_to 'View',:action => 'show', :id => suggestion %></td>	
  </tr>
<% end %>
</table>
<%else%>
	<b>No suggestions yet.</b>
<%end%>
