          <% else %>
              <td class="version_number" >
                <%= link_to each_version,
                            {:controller => 'review_files',
                             :action => 'show_code_file',
                             :review_file_id => review_file_id,
                             :participant_id => @participant.id,
                             :versions => file_versions}, :class =>"version_link" %>
              </td>
          <% end %>

      <% end %>
    </tr>

