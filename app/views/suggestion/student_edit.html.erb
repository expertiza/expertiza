<h2>Edit Suggested topic <%= @suggestion.title %></h2>
<%= form_tag :action => 'update_suggestion', :id => @suggestion.id do %>
<table>
  <tr>
    <td><label for="suggestion_title">Title</label></td>
    <td><%= text_field 'suggestion', 'title' , :size => 15, :value => @suggestion.title %></td>
  </tr>

  <tr>
    <td><label for="suggestion_topic">Description</label></td>
    <td><%= text_area 'suggestion', 'description',:rows => 10, :cols => 30, :value => @suggestion.description %></td>
  </tr>

  <tr>
    <td><label for="suggestion_signup_preference">Do you wish to work on this topic?</label></td>
    <td><%= select "suggestion", "signup_preference", {"Yes" =>"Y","No"=>"N"} %> </td>
  </tr>
</table>



  <p>
    <%= submit_tag "Submit" %>
  </p>
<% end %>

<%= link_to 'Back', :controller => 'suggestion', :action => 'new', :id => @suggestion.assignment_id %>