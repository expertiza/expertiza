<h1> Pending Surveys </h1>

<table class=listing cellpadding=2 width=50%>
  <tr><th align = left> Assignment Surveys </th></tr>
<% if (@assignment_surveys.size > 0) %>
  
  <% i=0 %>
  <% @assignment_surveys.each do |s| %>
    <tr> <td> <%= s[0].name %> </td> 
    <% if (!s[2]) %>
     <td  ><%= link_to 'Take Survey' ,:controller=>'course_evaluation',:action=>'create_response_map',:parent_id => s[1], :type => s[0].type %>&nbsp &nbsp</td>
 
    <% else %>
    <td><%= link_to 'View Response' ,:controller=>'response',:action=>'view',:id => s[3] %>&nbsp &nbsp</td>
    
    <% end %>
    </tr>
  <% end %>
<% else %>
  <tr>
    <td>
      <div class="flash_note">
        There exist no pending assignment surveys.
      </div>
  </td> </tr>
<%end%>
