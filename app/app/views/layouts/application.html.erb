<!doctype html>
<head>
  <title>
    <%= params[:controller] %> | <%= params[:action] %>
  </title>

  <meta http-equiv="content-type" content="text/html; charset=iso-8859-1">
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'goldberg',
    'layout',
    'application',
    'flash_messages',
    'balloontip',
    'redbox' %>

  <%= javascript_include_tag :all,
    'jquery',
    'redbox',
    'suckerfish',
    'superfish',
    'actionmenu',
    'tableactions',
    'application',
    'datetimepicker',
    'CalendarPopup',
    'ajaxtabs',
    'sorttable',
    'shared',
    'textareasizer'
  %>
</head>

<body>
  <%= render 'shared/header' %>

  <%= render 'shared/navigation' %>

  <div class="wrapper">
    <div class="container">

      <div class="sidebar">
        <div class="sidecontent">
          <%= render :partial => 'auth/login' %>
        </div>
      </div>

      <div class="main">
        <div class="content">
          <% if session[:menu] %>
            <%= render :partial => 'menu_items/breadcrumbs', :locals => { :crumbs => session[:menu].crumbs } %>
          <% end %>

          <%= render 'shared/flash_messages' %>

          <%= yield %>

        </div>
      </div>
    </div>

    <div class="clearing">&nbsp;</div>

  </div>
  <!-- class="wrapper" -->

  <div class="footer" align="center">
    <%= render 'shared/footer_message' %>
  </div>
  <!-- class="footer" -->

</body>
</html>
