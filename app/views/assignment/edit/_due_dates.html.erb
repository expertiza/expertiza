        html += '<input id="due_date_name" type="text" name="due_date[deadline_name]" value="'+due_date.deadline_name+'">'+'</td>';

        html += '<td  align="center" id="due_date_url_col" class="due_date_description_url" width="10%">';
        html += '<input id="due_date_description_url" type="text" name="due_date[description_url]" value="'+due_date.description_url+'">'+'</td>';

