<h1>Editing Assignment</h1>


  <%= form_for @assignment_form.assignment, html: { id: 'assignment_form' } do %>
    <div id="tabs">
      <ul>
        <li><a href="#tabs-1">General</a></li>
        <li><a href="#tabs-2">Rubrics</a></li>
        <li><a href="#tabs-3">Review strategy</a></li>
        <li><a href="#tabs-4">Due dates</a></li>
        <li><a href="#tabs-5">Topics</a></li>
      </ul>
      <div id="tabs-1">
        <%= render 'assignments/edit/general' %>
      </div>
      <div id="tabs-2">
        <%= render 'assignments/edit/rubrics' %>
      </div>
      <div id="tabs-3">
        <%= render 'assignments/edit/review_strategy' %>
      </div>
      <div id="tabs-4">
        <%= render 'assignments/edit/due_dates' %>
      </div>
      <div id="tabs-5">
        <%= render '/sign_up_sheet/add_signup_topcis.html' %>
      </div>
    </div>
    <script>
      jQuery(document).ready(function () {
        jQuery("#tabs").tabs();
      });
    </script>
    <%= button_tag 'Save'%>| <%= render :partial => '/shared_scripts/back' %>
  <% end %>

  <br/>
