<p>
  <b>Course:</b> <%= (@assignment.course ? h(@assignment.course.name) : 'none') %>
</p>
<% for column in Assignment.content_columns %>
<p>
  <b><%= column.human_name %>:</b> <%=h @assignment.send(column.name) %>
</p>
<% end %>
<% if @assignment.calculate_penalty? == TRUE %>
    <p>
        <b>Late Policy:</b> <%= LatePolicy.find_by_id(@assignment.late_policy_id).policy_name %>
    </p>
<% end %>

<%= link_to 'Edit', :action => 'edit', :id => @assignment %> |
<%= render :partial => '/shared_scripts/back' %>
