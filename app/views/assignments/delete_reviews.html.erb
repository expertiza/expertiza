<h1>Delete all assignment reviews</h1>
<% if flash[:notice] != nil and flash[:notice].strip != "" %>
    <div class="flash_error">
      <%= flash[:notice] %>
    </div>
<% end %>
<%= form_tag({:action=>'delete_reviews'})do %>
  <h3><%= "Number of assignment reviews: #{@response_map.count} " %></h3><br>
  <%= "Are you sure you want to delete all assignment reviews for #{@assignment.name.capitalize}?" %><br>

  <br>
  <%= hidden_field_tag "assignment_id", @assignment.id %>
  <%= hidden_field_tag "action_confirmed", 1 %>
  <%= submit_tag "Delete assignment reviews", :name=>"delete", :id=>@assignment.id %>
<% end %>
<br>
<%= render :partial => '/shared_scripts/back' %>