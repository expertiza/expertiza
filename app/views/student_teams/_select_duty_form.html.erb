<%= form_tag :controller => 'teams_participants', :action => 'update_duties' do %>
    <%= hidden_field_tag 'teams_participant_id', @teams_participant.id %>
    <%= select_tag 'teams_participant[duty_id]', options_from_collection_for_select(Duty.all, 'id', 'name', @teams_participant.duty_id) %>
    <%= submit_tag 'Update Duty' %>
  <% end %>