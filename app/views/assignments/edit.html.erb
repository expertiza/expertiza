<h1>Editing Assignment</h1>


  <%= form_for @assignment_form.assignment, html: { id: 'assignment_form' } do %>
    <div class= "chart-table" id="tabs">
      <ul>
        <li><a href="#tabs-1">General</a></li>
        <li><a href="#tabs-2">Rubrics</a></li>
        <li><a href="#tabs-3">Review strategy</a></li>
        <li><a href="#tabs-4">Due dates</a></li>
        <li><a href="#tabs-5">Topics</a></li>
      </ul>
      <div id="tabs-1">
        <%= render 'assignments/edit/general' %>
      </div>
      <div id="tabs-2">
        <%= render 'assignments/edit/rubrics' %>
      </div>
      <div id="tabs-3">
        <%= render 'assignments/edit/review_strategy' %>
      </div>
      <div id="tabs-4">
        <%= render 'assignments/edit/due_dates' %>
      </div>
      <div id="tabs-5">
            <input name="assignment_form[assignment][is_intelligent]" type="hidden" value="false"/>
            <%= check_box_tag('assignment_form[assignment][is_intelligent]', 'true', @assignment_form.assignment.is_intelligent?)%>
            <%= label_tag('assignment_form[assignment][is_intelligent]', 'Intelligent topic selection?') %>
            <img src="/assets/info.png" title="This feature allow students to &quot;bid&quot; for topics.
      Instructor must specify when topics are assigned, by going to the Due Dates tab and
      entering a due date for &quot;signup&quot;.">
          <br><br>
          <% if @assignment_form.assignment.staggered_deadline == true %>
                <%= link_to image_tag('/assets/tree_view/edit-signup-sheet-24.png', :title => 'Edit signup sheet'), {:controller => 'sign_up_sheet', :action => 'add_signup_topics_staggered', :id => @assignment_form.assignment.id}, {:title => 'Edit signup sheet'} %>
              <% else %>
                <%= link_to image_tag('/assets/tree_view/edit-signup-sheet-24.png', :title => 'Edit signup sheet'), {:controller => 'sign_up_sheet', :action => 'add_signup_topics', :id => @assignment_form.assignment.id}, {:title => 'Edit signup sheet'} %>
              <% end %>
      </div>
    </div>
    <script>
      jQuery(document).ready(function () {
        jQuery("#tabs").tabs();
      });
    </script>
    <%= button_tag 'Save'%>| <%= render :partial => '/shared_scripts/back' %>
  <% end %>

  <br/>
