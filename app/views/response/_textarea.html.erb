<% if !view.nil? %>
    <% if !table_title.nil? %>
        <p><b> <%= table_title %> </b></p>
        <hr>
    <% end %>
    <% if start_table %>
        <table class='general'>
        <% if !table_headers.nil? %>
            <tr>
                <% table_headers.split("|").each { |header| %>
                <th cellspacing="20%"><%= header %></th>
                <% } %>
            </tr>
            <tr>
        <% end %>
    <% end %>
    <% if start_col %>
                <td>
                    <ul>
    <% end %>
                        <li>
                            <p>
                                <i><%= label("custom_response", ques_num, ques_text) %></i>
                                <dl><dd><%= view %></dl></dd>
                            </p>
                        </li>
    <% if end_col %>
                    </ul>
                </td>
    <% end %>
    <% if end_table %>
            </tr>
        </table>
    <% end %>
    <% elsif controller.action_name == 'new' %>
    <% if !table_title.nil? %>
        <p><b> <%= table_title %> </b></p>
        <hr>
    <% end %>
    <% if start_table %>
        <table class='general'>
        <% if !table_headers.nil? %>
            <tr>
                <% table_headers.split("|").each { |header| %>
                <th cellspacing="20%"><%= header %></th>
                <% } %>
            </tr>
            <tr>
        <% end %>
    <% end %>
    <% if start_col %>
                <td>
                    <ul>
    <% end %>
                        <li>
                            <p><%= label("custom_response", ques_num, ques_text) %></p>
                            <p>
                                <%= text_area("custom_response", ques_num, :size => area_size) %>
                            </p>
                        </li>
    <% if end_col %>
                    </ul>
                </td>
    <% end %>
    <% if end_table %>
            </tr>
        </table>
    <% end %>
<%else%>
    <% if !table_title.nil? %>
        <p><b> <%= table_title %> </b></p>
        <hr>
    <% end %>
    <% if start_table %>
        <table class='general'>
        <% if !table_headers.nil? %>
            <tr>
                <% table_headers.split("|").each { |header| %>
                <th cellspacing="20%"><%= header %></th>
                <% } %>
            </tr>
            <tr>
        <% end %>
    <% end %>
    <% if start_col %>
                <td>
                    <ul>
    <% end %>
                        <li>
                            <p><%= label("custom_response", ques_num, ques_text) %></p>
                            <% if @review_scores[ques_num].comments.nil?%>
                                <%=text_area("custom_response", ques_num, :size => area_size, :value => @review_scores[ques_num].comments)%>
                            <% else %>
                                <%=text_area("custom_response", ques_num, :size => area_size, :value => @review_scores[ques_num].comments.gsub(/\"/,'&quot;'))%>
                            <% end %>
                        </li>
    <% if end_col %>
                    </ul>
                </td>
    <% end %>
    <% if end_table %>
            </tr>
        </table>
    <% end %>
<%end%>