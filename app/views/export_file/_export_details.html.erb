<h2>Export Details</h2>
<%= form_tag({:controller => 'export_file', :action => 'exportdetails'}, {:method => 'post', :multipart => true, :name => 'export_details_form'}) do %>
    <table>
      <tr>
        <td valign='Top'>Delimiter:</td>
        <td>
          <%= radio_button_tag 'delim_type2', 'comma', true %> Comma<br/>
          <%= radio_button_tag 'delim_type2', 'space' %> Space<br/>
          <%= radio_button_tag 'delim_type2', 'tab' %> Tab<br/>
          <%= radio_button_tag 'delim_type2', 'other' %> Other <%= text_field_tag 'other_char2' %>
          <br/>
        </td>
      </tr>
    </table>
    <br/>
    <label for="Export Details Fields">Export : <br/></label><br/>
    <%= check_box 'details', 'team_id', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Details Fields">Team ID / Author ID</label><br/>
    <%= check_box 'details', 'team_name', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Details Fields">Team Name / Paper Author</label><br/>
    <%= check_box 'details', 'reviewer', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Details Fields">Reviewer</label><br/>
    <%= check_box 'details', 'question', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Details Fields">Question ID / Dimension</label><br/>
    <%= check_box 'details', 'question_id', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Details Fields">Question / Dimension Name</label><br/>
    <%= check_box 'details', 'comment_id', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Details Fields">Comment ID / Dimension ID</label><br/>
    <%= check_box 'details', 'comments', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Details Fields">Comment Content</label><br/>
    <%= check_box 'details', 'score', {:checked => 'checked'}, "true", "false" %>
    <label for="Export Details Fields">Score</label><br/>
    <br/>
    <br/>
    <%= hidden_field_tag('id', @id) %>
    <%= hidden_field_tag('model', @model) %>
    <input type='submit' value='Export Details' onclick='{export_details_form.submit();}'/>
    <br/><br/>
<% end %>
