    <ul>
        <li><%= link_to 'Create Public Quiz', :controller => 'questionnaire', :action => 'new', :model => 'QuizQuestionnaire', :assignment_id => participant.parent_id, :private => 0 %></li>
        <li><%= link_to 'Create Private Quiz', :controller => 'questionnaire', :action => 'new', :model => 'QuizQuestionnaire', :assignment_id => participant.parent_id, :private => 1 %></li>
    </ul>
    <% end %>
