<h1>Global Surveys for Survey: <%= @survey.name %></h1>
<% if @global_surveys.length != 0 %>
  <%= form_tag(:action=>'survey_add_global', :method=>'get', :id=>params[:id], :course => params[:course]) do %>
    <br />
    <table id="surveys_table">
      <tr>
        <th>&nbsp; Assigned &nbsp;</th>
        <th align="left">Global Survey Name</th>
      </tr>
      <% for survey in @global_surveys %>
        <tr>
          <td align=center><input type=checkbox name="surveys[]" value="<%= survey.id %>"
            <% if @assigned_surveys.include?(survey) -%>
              checked="checked"
            <% end -%>
            ></td>
          <td><%= survey.name %></td>
          
        </tr>
      <% end %>
    </table>
    <br />
    <%= submit_tag "Assign Survey", :name=>"update" %>
  <% end %>
  <br />
<% else -%>
  <p>No surveys match the selected criteria.</p>
<% end -%>
<%= render :partial => '/shared_scripts/back' %>

