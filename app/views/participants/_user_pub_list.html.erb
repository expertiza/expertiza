<div class = "exp">
<%if user_list.length > 0%>

<table>
  <tr><th class="head">Name</th><th class="head">Full Name</th><th class="head">Master Rights Granted?</th><th class="head">Date Master Rights Updated</th><th class="head">Assignment Rights Granted?</th><th class="head">Date Assignment Rights Updated</th></tr>
<% for participant in user_list 
   user = User.find(participant.user_id) %>
  <tr class= "exp">
    <td ><%= link_to user.name, :controller=> 'users', :action => 'show', :id => user.id %></td>
    <td ><%= user.fullname %></td>
    <td ><%= user.master_permission_granted ? "Yes" : "No" %></td>
	<% if user.permission_updated_at.nil? %>
        <td ><%= "Not Set by User"  %></td>          
	<% else %>    
        <td ><%= user.permission_updated_at.strftime('%I:%M%p %m-%d-%Y')  %></td> 
	<% end %>     
    <td ><%= participant.permission_granted ? "Yes" : "No" %></td>
	<% if participant.permission_updated_at.nil? %>
        <td ><%= "Not Set by User"  %></td>          
	<% else %>    
        <td ><%= participant.permission_updated_at.strftime('%I:%M%p %m-%d-%Y')  %></td>          
	<% end %>     
  </tr>
<% end -%>
</table>
<% end -%>
</div>    